{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Aspire.Hosting.Dcp": "Warning"
    }
  },
  "Parameters": {
    "postgres-user": "postgres",
    "postgres-password": "pass!",
    "sinch-project-id": "",
    "sinch-api-key": "",
    "sinch-service-plan-id": "",
    "sinch-from-number": "",
    "keycloak-admin-user": "admin",
    "keycloak-admin-password": "admin",
    "keycloak-realm": "{{ProjectNameLower}}",
    "keycloak-api-token": "",
    "keycloak-erp-client-secret": "",
    "keycloak-mainwebsite-client-secret": "",
    "entra-id-tenant-id": "",
    "entra-id-client-id": "",
    "entra-id-client-secret": "",
    "smtp-username": "",
    "smtp-password": "",
    "email-from-address": "",
    "email-reply-to-address": ""
  },
  "Cors": {
    "WebOrigin": "http://localhost:5173",
    "MobileOrigin": "http://localhost:5174"
  },
  "Keycloak": {
    "BaseUrl": "http://localhost:8080",
    "Realm": "{{ProjectNameLower}}",
    "Portals": {
      "Erp": {
        "ClientId": "erp-portal",
        "Authority": "http://localhost:8080/realms/{{ProjectNameLower}}",
        "CallbackPath": "/signin-oidc",
        "SignedOutCallbackPath": "/signout-callback-oidc"
      },
      "MainWebsite": {
        "ClientId": "{{ProjectNameLower}}-public",
        "Authority": "http://localhost:8080/realms/{{ProjectNameLower}}",
        "CallbackPath": "/signin-oidc",
        "SignedOutCallbackPath": "/signout-callback-oidc"
      }
    }
  },
  "EntraId": {
    "Portals": {
      "Erp": {
        "CallbackPath": "/signin-oidc",
        "SignedOutCallbackPath": "/signout-callback-oidc"
      }
    }
  },
  "Identity": {
    "Keycloak": {
      "BaseUrl": "http://localhost:8080",
      "UserLookupTemplate": "/admin/realms/{realm}/users/{0}",
      "InvitationEndpoint": "/admin/realms/{realm}/users",
      "AllowUntrustedCertificates": false
    },
    "Sync": {
      "CronExpression": "0 0/15 * * * ?",
      "PageSize": 100,
      "MaxSuccessAge": "00:30:00"
    }
  },
  "Notifications": {
    "Sinch": {
      "ProjectId": "",
      "ApiKey": "",
      "Sms": {
        "ServicePlanId": "",
        "FromNumber": ""
      },
      "Email": {
      }
    },
    "Smtp": {
      "Host": "localhost",
      "Port": 1025,
      "UseSsl": false,
      "FromName": "{{ProjectName}} Notifications"
    },
    "Dispatcher": {
      "PollIntervalSeconds": 10
    }
  }
}
